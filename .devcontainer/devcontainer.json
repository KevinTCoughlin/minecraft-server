{
  "name": "Minecraft Plugin Development",
  "image": "mcr.microsoft.com/devcontainers/java:1-21-bookworm",
  
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "jdkDistro": "tem",
      "installGradle": "true",
      "gradleVersion": "8.12"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "dockerComposeVersion": "v2"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "fwcd.kotlin",
        "vscjava.vscode-gradle",
        "streetsidesoftware.code-spell-checker",
        "github.copilot",
        "github.copilot-chat",
        "ms-azuretools.vscode-docker",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "java.configuration.updateBuildConfiguration": "automatic",
        "java.compile.nullAnalysis.mode": "automatic",
        "java.jdt.ls.java.home": "/usr/local/sdkman/candidates/java/current",
        "kotlin.languageServer.enabled": true,
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "[kotlin]": {
          "editor.defaultFormatter": "fwcd.kotlin"
        },
        "[java]": {
          "editor.defaultFormatter": "redhat.java"
        },
        "gradle.nestedProjects": true,
        "files.watcherExclude": {
          "**/.gradle/**": true,
          "**/build/**": true
        }
      }
    }
  },

  "postCreateCommand": "bash -c 'echo \"Eclipse Temurin OpenJDK setup complete\" && java -version && ./gradlew build --no-daemon'",
  
  "remoteUser": "vscode",
  
  "forwardPorts": [25565, 25575],
  
  "portsAttributes": {
    "25565": {
      "label": "Minecraft Server",
      "onAutoForward": "notify",
      "protocol": "tcp"
    },
    "25575": {
      "label": "RCON",
      "onAutoForward": "silent",
      "protocol": "tcp"
    }
  },

  "mounts": [
    "source=${localWorkspaceFolder}/server,target=/workspace/server,type=bind,consistency=cached"
  ],

  "containerEnv": {
    "GRADLE_USER_HOME": "/workspace/.gradle",
    "JAVA_HOME": "/usr/local/sdkman/candidates/java/current"
  },

  "runArgs": [
    "--name=minecraft-dev",
    "--hostname=minecraft-dev"
  ]
}

